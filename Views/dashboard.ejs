<head>
<link rel="stylesheet" href="/CSS/styles.css">
</head>

<body>
  <div class="container">

    <h1>Dashboard</h1>

    <form action="/add-log" method="POST">
      <label>Type:</label>
      <select name="type" required>
        <option value="gym">Gym</option>
        <option value="badminton">Badminton</option>
        <option value="swimming">Swimming</option>
      </select><br>

      <label>Date:</label>
      <input type="date" name="date" required><br>

      <label>Details:</label>
      <input type="text" name="details" placeholder="eg. Exercise or Match" required><br>

      <button type="submit">Add Log</button>
    </form>

    <form action="/clear-logs" method="POST">
      <button type="submit">Clear logs</button>
    </form>

    <a href="/history" style="text-decoration: none; font-weight: bold;">ðŸ“œ View Log History</a><br><br>

  </div>
</body>

<script>
  fetch("/api/logs")
    .then(res => res.json())
    .then(data => {
      console.log("Fetched logs from API:", data);
      // You can display them dynamically inside a <div> or <ul>
    })
    .catch(err => console.error("Error loading logs:", err));
</script>

