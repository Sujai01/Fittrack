<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Dashboard</title>
</head>

<body class="bg-gray-100 text-gray-900 font-sans">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-center">🏋️ Dashboard</h1>


    <form action="/add-log" method="POST" class="mb-6 bg-white p-6 rounded shadow space-y-4">
  <div>
    <label class="block font-semibold mb-1">Type:</label>
    <select name="type" required class="w-full border rounded px-3 py-2">
      <option value="gym">Gym</option>
      <option value="badminton">Badminton</option>
      <option value="swimming">Swimming</option>
    </select>
  </div>

  <div>
    <label class="block font-semibold mb-1">Date:</label>
    <input type="date" name="date" required class="w-full border rounded px-3 py-2">
  </div>

  <div>
    <label class="block font-semibold mb-1">Details:</label>
    <input type="text" name="details" placeholder="e.g. Chest press or Match" required class="w-full border rounded px-3 py-2">
  </div>

  <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Add Log</button>
</form>


    <form action="/clear-logs" method="POST" class="mb-6">
  <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded shadow">
    🧹 Clear Logs
  </button>
</form>


    <a href="/history" class="text-blue-600 hover:underline flex items-center gap-1">
  📜 View Log History</a>
<br><br>

  </div>
</body>

<script>
  fetch("/api/logs")
    .then(res => res.json())
    .then(data => {
      console.log("Fetched logs from API:", data);
    })
    .catch(err => console.error("Error loading logs:", err));
</script>

